{{define "footer"}}
    <div class="x-footer flex flex-row gap2 items-center my-8 text-xs text-gray pt-2 pb-4" style="border-top: 1px solid #eee">
        <div>@2025 {{.siteName}}.</div>

        <div class="ml-auto flex flex-row gap2">
            <div class="text-xs"><a class="underline" href="/moderations">审核日志</a></div>
            <div class="text-xs"><a class="underline" href="/p/about">About</a></div>
            <div class="text-xs"><a class="underline" href="/sitemap.xml">SiteMap</a></div>
            <div class="text-xs"><a class="underline" href="/feed">Feed</a></div>
            <div>响应:{{.executionTime}}ms</div>
            <div>版本:v{{.VERSION}}</div>
            <div>缓存于:{{.cacheTime}}</div>
        </div>
    </div>
    <div id="back-to-top" class="back-to-top hidden" onclick="window.scrollTo({top: 0, behavior: 'smooth'})">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 19V5"/>
            <path d="m5 12 7-7 7 7"/>
        </svg>
    </div>
    <script src="https://lf9-cdn-tos.bytecdntp.com/cdn/expire-1-M/instant.page/5.1.0/instantpage.min.js" type="application/javascript"></script>
{{end}}